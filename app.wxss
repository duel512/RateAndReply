/**app.wxss**/
page {
  --primary-color: #0071e3;
  --primary-hover: #0077ed;
  --text-color: #333;
  --light-gray: #f5f5f7;
  --medium-gray: #d2d2d7;
  --dark-gray: #86868b;
  --card-shadow: 0 4px 24px rgba(0, 0, 0, 0.08);

  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', 'PingFang SC', 'Microsoft YaHei', sans-serif;
  font-size: 14px;
  line-height: 1.5;
  color: var(--text-color);
  background-color: #fff;
  -webkit-font-smoothing: antialiased;
}

.container {
  padding: 30rpx;
  box-sizing: border-box;
}

.card {
  background-color: white;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: var(--card-shadow);
}

.title {
  font-size: 34rpx;
  font-weight: 500;
  margin-bottom: 30rpx;
}

.subtitle {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.primary-btn {
  background-color: var(--primary-color);
  color: white;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  width: 100%;
  text-align: center;
}

.primary-btn:active {
  background-color: var(--primary-hover);
}

.text-center {
  text-align: center;
}

.text-gray {
  color: var(--dark-gray);
}

.mt-20 {
  margin-top: 20rpx;
}

.mb-20 {
  margin-bottom: 20rpx;
} 