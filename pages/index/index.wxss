/**index.wxss**/
.header {
  margin-bottom: 60rpx;
}

.tabs {
  display: flex;
  margin-bottom: 30rpx;
}

.tab {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  color: var(--dark-gray);
  transition: all 0.3s;
  border-radius: 8rpx;
}

.tab.active {
  color: var(--text-color);
  background-color: white;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
}

.conversation-input {
  width: 100%;
  height: 240rpx;
  padding: 20rpx;
  border: 1px solid var(--medium-gray);
  border-radius: 8rpx;
  box-sizing: border-box;
}

.upload-area {
  border: 2rpx dashed var(--medium-gray);
  border-radius: 8rpx;
  padding: 60rpx 0;
  text-align: center;
  margin-bottom: 30rpx;
}

.upload-icon {
  margin-bottom: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.icon-text {
  font-size: 80rpx;
  line-height: 80rpx;
  color: var(--dark-gray);
  font-weight: 200;
}

.upload-text {
  color: var(--dark-gray);
}

.image-preview {
  margin-bottom: 30rpx;
}

.image-preview image {
  width: 100%;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.image-actions {
  text-align: center;
}

.delete-btn {
  display: inline-block;
  color: #ff3b30;
  padding: 10rpx 30rpx;
  border-radius: 30rpx;
  border: 1rpx solid #ff3b30;
  font-size: 28rpx;
}

/* 添加模型选择器样式 */
.model-selector {
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.selector-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.selector-options {
  display: flex;
  justify-content: space-around;
}

.model-option {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  margin: 0 10rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #666;
  background-color: #f5f5f5;
  transition: all 0.3s;
}

.model-option.active {
  color: white;
  background-color: #07c160;
} 